<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:x="http://www.sitecore.net/xmlconfig/">
	<sitecore>
		<!-- Disable Federated Authentication enforcement so local logins are allowed -->
		<settings>
			<setting name="EnforceFederatedAuthentication" value="false" />
		</settings>

		<federatedAuthentication>
			<identityProviders>
				<!-- Disable Okta identity provider -->
				<identityProvider id="Okta" patch:attribute="enabled" enabled="false" />

				<!-- If you have other identity providers like Auth0 or Bearer and want them disabled, keep them commented or remove them -->
				<!--
        <identityProvider id="Auth0" patch:attribute="enabled" enabled="false" />
        <identityProvider id="Bearer" patch:attribute="enabled" enabled="false" />
        -->
			</identityProviders>

			<!-- You can remove or keep the propertyInitializer section if not using claims mapping -->
			<!--
      <propertyInitializer>
        <maps hint="list">
          <map name="Comment"
               type="Sitecore.Owin.Authentication.Services.DefaultClaimToPropertyMapper, Sitecore.Owin.Authentication"
               resolve="true">
            <data hint="raw:AddData">
              <source name="comment" />
              <target name="Comment" />
            </data>
          </map>
        </maps>
      </propertyInitializer>
      -->
		</federatedAuthentication>
	</sitecore>
</configuration>
